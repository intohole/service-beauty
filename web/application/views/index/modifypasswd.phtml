<div class="portlet-body form"><!-- BEGIN FORM--><form action="" id="changePasswdForm" class="form-horizontal">    <div class="control-group">        <label class="control-label">原密码<span class="required">*</span></label>        <div class="controls">            <input type="password" name="oldpwd" id="oldpwd" data-required="1" class="m-wrap middle"/>        </div>    </div>    <div class="control-group">        <label class="control-label">新密码<span class="required">*</span></label>        <div class="controls">            <input type="password" name="newpwd" id="newpwd" data-required="1" class="m-wrap middle"/>        </div>    </div>    <div class="control-group">        <label class="control-label">确认密码<span class="required">*</span></label>        <div class="controls">            <input type="password" name="confirmpwd" id="confirmpwd" data-required="1" class="m-wrap middle"/>        </div>    </div>    <input type="hidden" name="parent" value="<?php echo $parent; ?>" />    <div class="form-actions">        <button type="button" id="changePasswd" class="btn green">修改密码</button>        <button type="button"  class="btn jDialog-cancel-btn">取消</button>    </div></form><!-- END FORM--></div><script>    $('#changePasswd').on('click',function(){        var oldpwd = $('#oldpwd').val();        var newpwd = $('#newpwd').val();        var confirmpwd = $('#confirmpwd').val();        if(oldpwd == '' ){            $.messager.alert('提示', '原密码输入不符合要求');        }        if(newpwd == '' || newpwd != confirmpwd  ){            $.messager.alert('提示', '新密码输入有误');        }        $.post('/index/modifyPasswdAjax', $('#changePasswdForm').serialize(), function(data) {            if (data.error) {                $.messager.alert('提示', '修改失败，'+data.errorMsg);            } else {                $.messager.alert('提示', '修改成功', function(){                    $.fn.dialog('close');                    pglobal.dt.ajax.reload();                });            }        }, 'json')    });    $(document).on('click', '.jDialog-cancel-btn', function(){        $.fn.dialog('close')    });</script>